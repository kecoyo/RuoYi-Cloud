<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.butler.mapper.ButlerIconTypeMapper">

    <resultMap id="butlerIconTypeResult" type="com.ruoyi.butler.domain.ButlerIconType">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleted" column="deleted"/>
    </resultMap>

    <sql id="selectIconTypeVo">
        SELECT id,
               name,
               sort,
               status,
               create_by,
               create_time,
               update_by,
               update_time,
               deleted
        FROM butler_icon_type
    </sql>

    <select id="selectIconTypeList" parameterType="com.ruoyi.butler.domain.ButlerIconType"
            resultMap="butlerIconTypeResult">
        <include refid="selectIconTypeVo"/>
        <where>
            deleted = 0
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="remark != null and remark != ''">
                AND lower(remark) like concat('%', #{remark}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by sort, update_time desc
    </select>

    <select id="selectIconTypeById" parameterType="Long" resultMap="butlerIconTypeResult">
        <include refid="selectIconTypeVo"/>
        where id = #{id} and deleted = 0
    </select>

    <insert id="addIconType" parameterType="com.ruoyi.butler.domain.ButlerIconType">
        insert into butler_icon_type (
        <if test="name != null and name != ''">name,</if>
        <if test="sort != null">sort,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="name != null and name != ''">#{name},</if>
        <if test="sort != null">#{sort},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        sysdate()
        )
    </insert>

    <update id="updateIconType" parameterType="com.ruoyi.butler.domain.ButlerIconType">
        update butler_icon_type
        <set>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="sort != null">sort = #{sort},</if>
            <if test="status != null">status = #{status},</if>
            <if test="deleted != null">deleted = #{deleted},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            update_time = sysdate()
        </set>
        where id = #{id}
    </update>

    <update id="deleteIconTypeById" parameterType="Long">
        update butler_icon_type
        set deleted     = 1,
            update_time = sysdate()
        where id = #{id}
    </update>

    <update id="deleteIconTypeByIds" parameterType="Long">
        update butler_icon_type set deleted = 1, update_time = sysdate() where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
</mapper>