<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.butler.mapper.ButlerAccountMapper">

    <resultMap id="ButlerAccountResult" type="ButlerAccount">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="categoryId" column="category_id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="properties" column="properties"/>
        <result property="pictures" column="pictures"/>
        <result property="sort" column="sort"/>
        <result property="status" column="status"/>
        <result property="deleted" column="deleted"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
    </resultMap>

    <sql id="selectAccountVo">
        SELECT id,
               user_id,
               category_id,
               name,
               icon,
               properties,
               pictures,
               sort,
               status,
               deleted,
               create_by,
               create_time,
               update_by,
               update_time,
               remark
        FROM butler_account
    </sql>
    <select id="selectAccountList" parameterType="ButlerAccount" resultMap="ButlerAccountResult">
        <include refid="selectAccountVo"/>
        <where>
            deleted = 0
            <if test="categoryId != null">
                AND category_id = #{categoryId}
            </if>
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="remark != null and remark != ''">
                AND lower(remark) like concat('%', #{remark}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
        order by sort, update_time desc
    </select>

    <select id="countAccountByCategoryId" resultType="Integer">
        select count(1) from butler_account where category_id=#{categoryId}
    </select>
</mapper>