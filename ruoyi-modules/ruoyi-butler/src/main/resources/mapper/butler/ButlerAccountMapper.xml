<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.butler.mapper.ButlerAccountMapper">

    <resultMap type="ButlerAccount" id="ButlerAccountResult">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="categoryId" column="category_id"/>
        <result property="name" column="name"/>
        <result property="icon" column="icon"/>
        <result property="properties" column="properties"/>
        <result property="pictures" column="pictures"/>
        <result property="remark" column="remark"/>
        <result property="sort" column="sort"/>
    </resultMap>

    <sql id="selectAccountVo">
        SELECT id,
               user_id,
               category_id,
               name,
               icon,
               properties,
               pictures,
               remark,
               sort
        FROM butler_account
    </sql>

    <select id="selectAccountList" parameterType="ButlerAccount" resultMap="ButlerAccountResult">
        <include refid="selectAccountVo"/>
        <where>
            <if test="name != null and name != ''">
                AND name like concat('%', #{name}, '%')
            </if>
            <if test="remark != null and remark != ''">
                AND lower(remark) like concat('%', #{remark}, '%')
            </if>
            <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
                AND date_format(create_time,'%y%m%d') &gt;= date_format(#{params.beginTime},'%y%m%d')
            </if>
            <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
                AND date_format(create_time,'%y%m%d') &lt;= date_format(#{params.endTime},'%y%m%d')
            </if>
        </where>
    </select>

</mapper>